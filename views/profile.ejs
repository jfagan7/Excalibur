<html>

<head>
    <%- include partials/Links %>
        <link rel="stylesheet" type="text/css" href="/stylesheets/profile.css">
        <script src="/javascripts/controllers/profileController.js"></script>
</head>

<body>
    <%- include partials/AuthHeader %>

        <div class="container">

            <div class="card">
                <div class="background-img container">
                </div>
                <div class="row card-content">
                    <div class="col m3 ">
                        <img id="avatar" class="circle responsive-img" src="/images/avatar.png" alt="">
                    </div>
                    <div class="col m3">

                        <h5 class="flow-text">
                            <%= user.firstName + " " + user.lastName %>
                        </h5>
                        <h6 class="flow-text">
                            <%= user.profession%>
                        </h6>
                    </div>
                    <div class="col m3">
                        <h5>Completed Jobs</h5>
                        <h6>
                            <%= user.completedJobs%>
                        </h6>
                    </div>
                    <div class="col m3">
                        <h5>Hourly Rate</h5>
                        <h6>
                            <%= user.rate %>/hr</h6>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col m8">
                    <div class="card">
                    <div class="card-content">
                        <p class="flow-text">
                            <%= user.bio%>
                        </p>
                        </div>
                    </div>
                </div>
                <div class="col m4">
                    <div class="card">

                    </div>
                </div>
            </div>
        </div>
        <%- include partials/AuthFooter %>
</body>

</html>